/* pages/home/home.wxss */

.wrap {
  width: 100vw;
  height: 100vh;
  background: #1d2e52;
  display: flex;
  flex-direction: column;
}

.con {
  width: 100%;
  height: 1000rpx;
  flex: 1;
  color: white;
  padding-bottom: 100rpx;
  padding-top: 10rpx;
  display: flex;
  flex-direction: column;
}

.con .robot {
  position: relative;
  min-height: 100rpx;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}

.robot image {
  position: absolute;
  left: 20rpx;
  top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.con .robot .text {
  margin-top: 20rpx;
  margin-left: 120rpx;
  font-size: 40rpx;
  /* position: absolute;
  left: 170rpx;
  top: 15rpx; */
  max-width: 490rpx;
  min-height: 90rpx;
  box-sizing: border-box;
  display: inline-block;
  /* height: 100rpx; */
  background: #1a4762;
  line-height: 48rpx;
  padding: 20rpx 20rpx;
  border-radius: 10rpx;
}

.con .user {
  position: relative;
  min-height: 100rpx;
  padding-right: 20rpx;
  margin-bottom: 30rpx;
  text-align: right;
}

.user image {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.con .user .text {
  margin-right: 120rpx;
  margin-top: 20rpx;
  font-size: 40rpx;
  /* position: absolute;
  right: 150rpx;
  top: 15rpx; */
  max-width: 490rpx;
  min-height: 90rpx;
  box-sizing: border-box;
  display: inline-block;
  background: #1a4762;
  line-height: 48rpx;
  padding: 20rpx 20rpx;
  border-radius: 10rpx;
}

.send {
  width: 100vw;
  height: 100rpx;
  background: #ccc;
  position: fixed;
  bottom: 0;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
  background: #1a4762;
}

.send button {
  width: 100%;
  height: 100%;
  flex: 2;
  font-size: 36rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
}

input {
  width: 90%;
  flex: 8;
  height: 100%;
  background: #ccc;
  margin-right: 10rpx;
  padding: 0 10rpx;
}
